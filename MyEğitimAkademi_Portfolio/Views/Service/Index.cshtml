 @model List<MyEğitimAkademi_Portfolio.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hizmet Listesi</h2>
<table class="table table-bordered">
    <th>Hizmet ID</th>
    <th>Hizmet Adı</th>
    <th>Hizmet Sil</th>
    <th>Hizmet Güncelle</th>

    @foreach(var item in Model)
            {
<tr>
    <td>@item.ServiceID</td>
    <td>@item.ServiceName</td>
    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
  <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
</tr>
        }
    
</table>
<a href="/Service/AddService/" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>

