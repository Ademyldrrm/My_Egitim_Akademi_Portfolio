
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Referans Ekleme Sayfası</h2>
<form method="post">
    <label>Referans Adı</label>
    <input type="text" class="form-control" name="NameSurname" />
    <br />
    <label>Referans Unvanı</label>
    <input type="text" class="form-control" name="Title"/>
    <br />
    <label>Referans Görseli</label>
    <input type="text" class="form-control" name="ImageUrl" />
    <br />
    <label>Referans Yorumu</label>
    <textarea class="form-control" rows="5" name="Comment"></textarea>
    <br />
    <button class="btn btn-info" >Referans Ekle</button>
</form>

