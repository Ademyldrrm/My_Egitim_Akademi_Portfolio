@model List<MyEğitimAkademi_Portfolio.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script>
        function confirmDelete(testimonialID) {
            var confirmed = confirm('Bu referansı silmek istediğinizden emin misiniz?');
            if (confirmed) {
                window.location.href = "/Testimonial/DeleteTestimonial/" + testimonialID;
            }
        }
    </script>


} 


<h2>Referans Sayfası</h2>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Referansın Yorumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Comment</td>
            <td>
                <a href="javascript:void(0);" class="btn btn-outline-danger"
                   onclick="confirmDelete(@item.TestimonialID)">Sil</a>
            </td>
            <td>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID"
                   class="btn btn-outline-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-outline-primary">Yeni Referans Giriş</a>








